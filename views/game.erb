<div class="row">
	<div class="col-md-3">
		<h2>campo de comandos</h2>
		<div>
			<form method="post" action="/game">
				<input id="campo-de-comandos" type="text" name="campo-de-comandos" value="<%= session['comandos']%>">
				<input class="btn btn-primary" type="submit" value="Ejecutar"><hr/>
				<button class="btn btn-default" name="comandos" value="i">Izquierda</button>
				<button class="btn btn-default" name="comandos" value="d">Derecha</button>
				<button class="btn btn-default" name="comandos" value="a">Avanzar</button>
			</form>
		</div>
	</div>
	<div class="col-md-6">
		<h1>mapa</h1>
		<div>
			<table class="table table-bordered">
				<% session[:mapa].cuadricula.each_with_index do |linea, i| %>
				<tr>
					<% linea.each_with_index do |col, j| %>
					<td class="pos-<%= "#{i}-#{j}"%>"><%= col %></td>
					<% end %>
				</tr>
				<% end %>
			</table>
		</div>
	</div>
	<div class="col-md-3">
		<h2>instrucciones</h2>
		<p>
			Escriba en las instrucciones:
			a: avanzar
			d: derecha
			i: izquierda
		</p>
	</div>
	<% if session[:mapa].encontro_tesoro? %>
		<h1>Atrapaste el tesoro!!</h1>
	<% elsif session[:mapa].juego_terminado? %>
		<h1>Perdiste!!!</h1>
		<a class="btn btn-danger" href="/">Reiniciar</a>
	<% end %>
</div>
<style type="text/css">
	.table tbody tr td {
		width: 10px;
		height: 50px;
		padding: 0px;
		text-align: center;
		vertical-align: middle;
		border-width: 3px;
	}
</style>